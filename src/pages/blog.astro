---
import Layout from "../layout/Layout.astro";
import { Image } from "astro:assets"; // Import the Image component


const allPosts = await Astro.glob("../pages/blog/*.md");

const desription =
  "Heic Converter Blog - Your source for insights on HEIC convertion to various formats in a secure reliable and ensures privacy by on device conversion.";
const ogImage = "/og-image/blog.png";
const title = "Heic Converter Blog: Conversion made Simple, Secure and Private";
const ogTitle =
  "Heic Converter Blog: HEIC Conversion made Simple, Secure and Private";
---

<Layout
  title={title}
  description={desription}
  ogImage={ogImage}
  ogTitle={ogTitle}
>
  <div class="max-w-4xl mx-auto px-4">
    <h1 class="font-bold text-3xl my-8 text-center">Blog</h1>
    <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4 mb-20">
      {
        allPosts.map((post) => (
          <a class="m-auto" href={post.url}>
            <div class="text-red-500 border border-gray-200 rounded-lg shadow w-full max-w-sm">
              <div class="relative w-full h-64 lg:h-48 border">
                <Image
                  src="../pages/blog/{post.frontmatter.cover.image}"
                  alt={post.frontmatter.cover.alt}
                />
              </div>
              <div class="p-4">
                <h3 class="text-black text-lg font-bold">
                  {post.frontmatter.title}
                </h3>
                <p class="text-sm text-gray-500 mt-1 line-clamp-3">
                  {post.frontmatter.shortDescription}
                </p>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
