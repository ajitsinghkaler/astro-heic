---
import Layout from "../layout/Layout.astro";

const allPosts = await Astro.glob("../pages/blog/*.md");
---

<Layout>
  <h1 class="font-bold text-3xl my-8 text-center">Blog</h1>
  <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4 mb-20">
    {
      allPosts.map((post) => (
        <a class="m-auto" href={post.url}>
          <div class="text-red-500 border border-gray-200 rounded-lg shadow w-full max-w-sm">
            <div class="relative w-full h-64 lg:h-48 border">
              <img class="object-cover" />
            </div>
            <div class="p-4">
              <h3 class="text-black text-lg font-bold">{post.frontmatter.title}</h3>
              <p class="text-sm text-gray-500 mt-1 line-clamp-3">
                {post.frontmatter.shortDescription}
              </p>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</Layout>
