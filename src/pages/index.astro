---
import Layout from "../layout/Layout.astro";
import Features from "../components/Features.astro";
import Faq from "../components/Faq.astro";
import JPGCard from "../components/JPGCard.astro";
import PNGCard from "../components/PNGCard.astro";
import WEBPCard from "../components/WEBPCard.astro";
import PDFCard from "../components/PDFCard.astro";
const title = "HEIC Conversion made Simple, Secure and Private";
const description =
  "HEIC Converter - Secure, reliable conversion of HEIC to PDF, JPG, PNG, and WEBP, all on-device and free.  Convert HEIC images without compromising on privacy.";
const ogImage = "/og-image/home.png";
const ogTitle =
  "HEIC Converter: HEIC Conversions made Simple, Secure and Private";
---

<Layout
  title={title}
  description={description}
  ogImage={ogImage}
  ogTitle={ogTitle}
>
  <h1 class="text-center font-bold text-4xl my-12">HEIC Converter</h1>
  <div class="grid md:grid-cols-2 grid-cols-1 gap-4 max-w-4xl mx-auto px-4">
    <a href="heic-to-pdf/">
      <div
        class="bg-zinc-100 text-red-500 block p-6 border border-gray-200 rounded-lg shadow hover:bg-zinc-200 w-full flex"
      >
        <div><PDFCard /></div>
        <div class="px-4">
          <h2 class="text-black text-lg font-bold">HEIC to PDF</h2>
          <p class="text-sm text-gray-600 mt-1">
            Convert multiple HEIC images to a PDF document
          </p>
        </div>
      </div></a
    >
    <a href="heic-to-jpg/"
      ><div
        class="bg-zinc-100 text-yellow-400 p-6 border border-gray-200 rounded-lg shadow hover:bg-zinc-200 w-full flex"
      >
        <div><JPGCard /></div>
        <div class="px-4">
          <h2 class="text-black text-lg font-bold">HEIC to JPG</h2>
          <p class="text-sm text-gray-600 mt-1">
            Convert each HEIC image into a seprate JPG image
          </p>
        </div>
      </div></a
    >
    <a href="heic-to-png/">
      <div
        class="bg-zinc-100 text-blue-500 p-6 border border-gray-200 rounded-lg shadow hover:bg-zinc-200 w-full flex"
      >
        <div><PNGCard /></div>
        <div class="px-4">
          <h2 class="text-black text-lg font-bold">HEIC to PNG</h2>
          <p class="text-sm text-gray-600 mt-1">
            Convert each HEIC image into a seprate PNG image
          </p>
        </div>
      </div>
    </a>
    <a href="heic-to-webp/">
      <div
        class="bg-zinc-100 text-purple-500 p-6 border border-gray-200 rounded-lg shadow hover:bg-zinc-200 w-full flex"
      >
        <div><WEBPCard /></div>
        <div class="px-4">
          <h2 class="text-black text-lg font-bold">HEIC to WEBP</h2>
          <p class="text-sm text-gray-600 mt-1">
            Convert each HEIC image into a web optimizes WEBP image
          </p>
        </div>
      </div></a
    >
  </div>
  <div class="my-28 block max-w-4xl mx-auto"><Features /></div>
  <div></div>
  <div class="my-28 block"><Faq /></div>
</Layout>
